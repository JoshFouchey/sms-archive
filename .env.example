# -------------------------------------------------------------------
# SMS Archive - Environment Configuration
# Copy this to .env and fill in the sensitive fields
# -------------------------------------------------------------------

# General
TZ=UTC
LOG_LEVEL=INFO

# Ports
DB_PORT=5432
APP_PORT=8070
FRONTEND_PORT=8071

# Database Configuration
DB_VERSION=15-alpine
DB_NAME=sms_archive
DB_USER=sms_user
DB_PASSWORD=sms_pass

# File Storage
DB_DATA_HOST_PATH=/nextcloud/sms-archive/postgres
MEDIA_ROOT_HOST_PATH=/nextcloud/sms-archive/media/messages

# Application Configuration
APP_BASE_URL=https://messages.example.com
VITE_API_BASE=https://api-messages.example.com

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://messages.example.com,https://api-messages.example.com
